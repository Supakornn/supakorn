---
interface Props {
  class?: string;
  style?: string;
}

const { class: className, style } = Astro.props;
---

<div
  class:list={[
    "p-6 bg-white dark:bg-dark-card rounded-lg shadow-sm border border-slate-200 dark:border-dark hover:border-primary dark:hover:border-primary transition-colors",
    className
  ]}
  style={style}
>
  <slot />
</div>
