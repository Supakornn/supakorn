---
interface Props {
  src: string;
  alt: string;
  class?: string;
}

const { src, alt, class: className } = Astro.props;
---

<div class="relative">
  <div class="absolute inset-0 bg-slate-100 dark:bg-slate-800 animate-pulse rounded-md"></div>
  <img
    src={src}
    alt={alt}
    class:list={["relative z-10 opacity-0 transition-opacity duration-300", className]}
    loading="lazy"
    decoding="async"
    onload="this.classList.remove('opacity-0')"
  />
</div>
