---
import type { SkillCategory } from "../data/skills";

interface Props {
  category: SkillCategory;
}

const { category } = Astro.props;
---

<div
  class="skill-category bg-white/50 dark:bg-slate-800/50 rounded-lg p-4 backdrop-blur-sm border border-slate-200 dark:border-slate-700"
>
  <h3 class="text-xl font-medium mb-3 text-primary">
    {category.icon}
    {category.title}
  </h3>
  <ul class="space-y-2">
    {
      category.skills.map((skill) => (
        <li class="flex items-center gap-2 p-2 rounded-md hover:bg-slate-100 dark:hover:bg-slate-700/50 transition-colors">
          {skill.darkIcon ? (
            <>
              <img src={skill.icon} class="w-5 h-5 block dark:hidden" />
              <img src={skill.darkIcon} class="w-5 h-5 hidden dark:block" />
            </>
          ) : (
            <img src={skill.icon} class="w-5 h-5" />
          )}
          <span class="flex-1 text-slate-700 dark:text-slate-300">{skill.name}</span>
        </li>
      ))
    }
  </ul>
</div>
