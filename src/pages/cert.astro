---
import Layout from "../layouts/Layout.astro";
import CertificateCard from "../components/CertificateCard.astro";
import { certificates } from "../data/certificates";
---

<Layout title="Certificates">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-bold mb-6 text-slate-900 dark:text-white animate-title">
      Certificates
    </h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {certificates.map((cert, index) => <CertificateCard cert={cert} index={index} />)}
    </div>
  </div>
</Layout>

<style>
  .animate-title {
    animation: slideDown 0.3s ease-out forwards;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
  }

  :global(.cert-card) {
    animation: slideUp 0.3s ease-out backwards;
    animation-delay: calc(var(--index) * 0.1s);
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
  }
</style>
