---
import Layout from "../layouts/Layout.astro";

const Certificates = [
  {
    title: "Software Engineer Intern",
    from: "HackerRank",
    image: "/img/certificates/soft-eng-intern.png",
   
  },
  {
    title: "JavaScript (Basic)",
    from: "HackerRank",
    image: "/img/certificates/js-basic.png",
   
  },
  {
    title: "Go (Basic)",
    from: "HackerRank",
    image: "/img/certificates/go-basic.png",
  },
  {
    title: "Rest API (Intermediate)",
    from: "HackerRank",
    image: "/img/certificates/rest-api-inter.png",
  },
];
---

<Layout title="Certificates">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-bold mb-6 text-slate-900 dark:text-white animate-title">Certificates</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        Certificates.map((cert, index) => (
          <div
            class="cert-card block p-4 bg-white dark:bg-dark-card rounded-lg shadow-sm border border-slate-200 dark:border-dark hover:border-primary dark:hover:border-primary transition-colors"
            style={`animation-delay: ${index * 0.2}s`}
          >
            <div class="relative mb-4 overflow-hidden rounded-md">
              <img
                src={cert.image}
                alt={cert.title}
                class="w-full h-80 object-cover transform hover:scale-105 transition-transform duration-300"
              />
            </div>
            <h2 class="text-xl font-semibold mb-2 text-slate-900 dark:text-white hover:text-primary transition-colors">
              {cert.title}
            </h2>
            <p class="text-primary mb-4">{cert.from}</p> 
          </div>
        ))
      }
    </div>
  </div>
</Layout>

<style>
  .animate-title {
    animation: slideDown 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .cert-card {
    animation: slideUp 0.4s cubic-bezier(0.16, 1, 0.3, 1) both;
    animation-delay: calc(var(--index, 0) * 0.1s);
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  document.querySelectorAll(".cert-card").forEach((card, index) => {
    card.style.setProperty("--index", index.toString());
  });
</script>
