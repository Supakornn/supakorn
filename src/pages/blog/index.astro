---
import Layout from "../../layouts/Layout.astro";

const posts = [
  //   {
  //     title:
  //     excerpt:
  //     date:
  //     slug:
  //     readTime:
  //   }
];
---

<Layout title="Blog">
  <div class="max-w-4xl">
    <h1 class="text-4xl font-bold mb-6 text-slate-900 dark:text-white">Blog</h1>

    <div class="grid gap-6">
      {
        posts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="block p-6 bg-white dark:bg-dark-card rounded-lg shadow-sm border border-slate-200 dark:border-dark hover:border-primary dark:hover:border-primary transition-colors"
          >
            <div class="flex justify-between items-start mb-2">
              <h2 class="text-xl font-semibold text-slate-900 dark:text-white hover:text-primary transition-colors">
                {post.title}
              </h2>
              <span class="text-sm text-slate-500 dark:text-slate-400">
                {post.readTime}
              </span>
            </div>
            <p class="text-slate-700 dark:text-slate-300 mb-4">
              {post.excerpt}
            </p>
            <div class="flex justify-between items-center">
              <time class="text-sm text-slate-500 dark:text-slate-400">
                {post.date}
              </time>
              <span class="text-primary">Read more â†’</span>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</Layout>

<script>
  import { gsap } from "gsap";

  gsap.from(".grid > a", {
    y: 30,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: "power2.out",
  });
</script>
